<body class="d-flex h-100">

<%- include('partials/header') -%>
<%- include('partials/navbar') -%>

<div class="container card-container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= deck.title %></h2>
      <!-- <img class="img-fluid" src="<%= deck.image%>" /> -->
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/deck/likeDeck/<%= deck.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= deck.likes %></h3>
        <%if(deck.user == user.id){ %>
        <form
          action="/deck/deleteDeck/<%= deck.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>

    <!-- 9-22  Next To Do: Display each word randomly -->
    <div class="col-3 mt-5">
      <p id="randomDisplay"></p>
      <p class="hidden deckArray"><%= deck.words %></p>
      <button id="next">Next</button>
    </div>

    <!-- 9/24 Added word. Next To Do: Add Math.random logic to display random word. Add speech API. -->

    <!-- 9/26 Added random word logic. Next To Do: Add speech API and beautify MVP. -->

    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/deck">My Decks</a>
      <a class="btn btn-primary" href="/addDeck">Add Deck</a>
    </div>
  </div>
</div>

<script src="/js/main.js"></script>

<%- include('partials/footer') -%>
