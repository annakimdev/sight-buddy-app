      <h2><%= deck.title %></h2>
      <!-- <img class="img-fluid" src="<%= deck.image%>" /> -->
      <!-- <div class="row justify-content-between"> -->
      <div class="d-flex">
        <div class="py-2">
          <form
            class="col-1"
            action="/deck/likeDeck/<%= deck.id %>?_method=PUT"
            method="POST">
            <button class="btn btn-info fa fa-heart" type="submit"></button>
          </form>
        </div>
        
        <div class="py-2">
          <h5><%= deck.likes %></h5>
        </div>
        
        <div class="ml-auto p-2">
          <%if(deck.user == user.id){ %>
            <form
              action="/deck/deleteDeck/<%= deck.id %>?_method=DELETE"
              method="POST"
              class="col-3">
              <button class="btn btn-outline-danger fa fa-trash" type="submit"></button>
            </form>
            <%}%>
        </div>
      </div>
    </div>
  </div>

