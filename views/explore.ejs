<%- include('partials/header') -%>
<body class="explore d-flex h-100">

<%- include('partials/navbar') -%>

<div class="container card-container">

  <div class="card-deck mt-5">
    <% for(var i=0; i<decks.length; i++) {%>
      <div class="card mb-5" style="min-width: 18rem; max-width: 22rem;">
        <div class="row justify-content-end position-relative">
          <%if(decks[i].user == user.id){ %>
            <form
              action="/deck/deleteDeck/<%= decks[i].id %>?_method=DELETE"
              method="POST"
              class="col-3">
              <button class="btn btn-outline-danger fa fa-trash position-absolute" style="top: 0.5rem; right: 1.5rem;" type="submit"></button>
            </form>
            <%}%>
        </div>
        <img src="/imgs/sightly-random-<%= Math.ceil(Math.random() * 5) %>.png" class="card-img-top" alt="">
        <div class="card-body">
            <a href="/deck/<%= decks[i]._id%>"><h5 class="card-title text-info"><%= decks[i].title%></h5>
            </a>
            
            <div class="content">
              <p class="truncate lspacing-1"><%= decks[i].words%></p>
            </div>
            
            
        </div>
        <div class="card-footer">
          <div class="d-flex align-items-center">
            <div class="mr-auto py-2">
              <button id="gradeBtn" class="btn btn-outline-secondary" disabled><%= decks[i].grade%></button>
            </div>

            <div class="py-2">
              <form
                class="col-1"
                action="/deck/likeDeck/<%= decks[i].id %>?_method=PUT"
                method="POST">
                <button class="btn btn-info fa fa-heart" type="submit"></button>
              </form>
            </div>
            
            <div class="py-2">
              <h5><%= decks[i].likes %></h5>
            </div>
            
            
          </div>
          
        </div>
      </div>
    <% } %>
  </div>
</div>  

<%- include('partials/footer') -%>